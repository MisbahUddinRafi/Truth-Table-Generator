<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="960.0" styleClass="Styling.css" stylesheets="Styling.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResultPageController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="960.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/ResultPageBackGround.png" />
            </image>
        </ImageView>
        <Text fill="WHITE" layoutX="240.0" layoutY="98.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Expression: ">
            <font>
                <Font name="Comic Sans MS Bold" size="22.0" />
            </font>
        </Text>
        <Text fill="WHITE" layoutX="240.0" layoutY="154.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Postfix: ">
            <font>
                <Font name="Comic Sans MS Bold" size="22.0" />
            </font>
        </Text>
        <TextField fx:id="expressionText" editable="false" focusTraversable="false" layoutX="380.0" layoutY="66.0" mouseTransparent="true" prefWidth="340.0" styleClass="display-text-field" stylesheets="@Styling.css">
            <font>
                <Font name="Comic Sans MS Bold" size="22.0" />
            </font>
        </TextField>
        <TextField fx:id="postfixText" editable="false" focusTraversable="false" layoutX="380.0" layoutY="122.0" mouseTransparent="true" prefWidth="340.0" styleClass="display-text-field" stylesheets="@Styling.css">
            <font>
                <Font name="Comic Sans MS Bold" size="22.0" />
            </font>
        </TextField>
        <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goToMain" prefHeight="36.0" prefWidth="80.0" styleClass="back-button" stylesheets="@Styling.css" text="Back">
            <font>
                <Font name="Comic Sans MS Bold" size="16.0" />
            </font>
        </Button>
        <ScrollPane hbarPolicy="NEVER" layoutX="134.0" layoutY="207.0" prefHeight="320.0" styleClass="transparent-scrollpane" stylesheets="@Styling.css">
            <content>
                <TableView fx:id="resultTable" blendMode="COLOR_DODGE" fixedCellSize="0.0" prefHeight="350.0" prefWidth="660.0" stylesheets="@Styling.css">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
